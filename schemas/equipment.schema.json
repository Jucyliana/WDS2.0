{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Equipment Schema",
  "description": "Schema for equipment.json files containing equipment definitions",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Id", "Name", "Type"],
    "properties": {
      "Id": {
        "type": "string",
        "description": "Unique identifier for the equipment"
      },
      "Name": {
        "type": "string",
        "description": "Name of the equipment"
      },
      "Type": {
        "type": "string",
        "enum": ["Equipment"],
        "description": "Type indicator for equipment entries"
      },
      "Description": {
        "type": "string",
        "description": "Text description of the equipment"
      },
      "Attributes": {
        "type": "object",
        "description": "Key-value object containing attributes for the equipment",
        "additionalProperties": {
          "type": "string"
        }
      },
      "Children": {
        "type": "object",
        "description": "Object mapping other WDSItems with IDs (statlines, rules,...) with additional description if needed",
        "additionalProperties": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  }
}
