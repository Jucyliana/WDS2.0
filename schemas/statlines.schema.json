{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Statlines Schema",
  "description": "Schema for statlines.json files containing game attribute statlines",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Id", "Name", "Type"],
    "properties": {
      "Id": {
        "type": "string",
        "description": "Unique identifier for the statline"
      },
      "Name": {
        "type": "string",
        "description": "Name of the statline"
      },
      "Type": {
        "type": "string",
        "enum": ["Statline"],
        "description": "Type indicator for statline entries"
      },
      "Attributes": {
        "type": "object",
        "description": "Object containing game attributes (M, T, SV, W, LD, OC, IS, etc.)",
        "additionalProperties": {
          "type": ["string", "null"]
        }
      },
      "Children": {
        "type": "array",
        "description": "Array of child items (statlines, rules, equipment, etc.)",
        "items": {
          "type": "object",
          "required": ["Id"],
          "properties": {
            "Id": {
              "type": "string",
              "description": "ID of the child item"
            },
            "Info": {
              "type": "string",
              "description": "Optional additional information about the item"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}
