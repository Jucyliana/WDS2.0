{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rules Schema",
  "description": "Schema for rules.json files containing game rule definitions",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Id", "Name", "Type"],
    "properties": {
      "Id": {
        "type": "string",
        "description": "Unique identifier for the rule"
      },
      "Name": {
        "type": "string",
        "description": "Display name of the rule"
      },
      "Type": {
        "type": "string",
        "enum": ["Rule"],
        "description": "Type indicator for rule entries"
      },
      "Description": {
        "type": "string",
        "description": "Full text description of the rule"
      },
      "Attributes": {
        "type": "object",
        "description": "Key-value object containing attributes for the rule",
        "additionalProperties": {
          "type": "string"
        }
      },
      "Children": {
        "type": "object",
        "description": "Object mapping other WDSItems with IDs (statlines, rules,...) with additional description if needed",
        "additionalProperties": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  }
}
