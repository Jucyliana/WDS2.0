{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rules Schema",
  "description": "Schema for rules.json files containing game rule definitions",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Id", "Name", "Type"],
    "properties": {
      "Id": {
        "type": "string",
        "description": "Unique identifier for the rule"
      },
      "Name": {
        "type": "string",
        "description": "Name of the rule"
      },
      "Type": {
        "type": "string",
        "enum": ["Rule"],
        "description": "Type indicator for rule entries"
      },
      "Description": {
        "type": "string",
        "description": "Full text description of the rule"
      },
      "Attributes": {
        "type": "object",
        "description": "Key-value object containing attributes for the rule",
        "additionalProperties": {
          "type": "string"
        }
      },
      "Children": {
        "type": "array",
        "description": "Array of child items (statlines, rules, equipment, etc.)",
        "items": {
          "type": "object",
          "required": ["Id"],
          "properties": {
            "Id": {
              "type": "string",
              "description": "ID of the child item"
            },
            "Info": {
              "type": "string",
              "description": "Optional additional information about the item"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}
