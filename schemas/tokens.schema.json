{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Tokens Schema",
  "description": "Schema for tokens.json files containing token definitions",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Id", "Name", "Type"],
    "properties": {
      "Id": {
        "type": "string",
        "description": "Unique identifier for the token"
      },
      "Name": {
        "type": "string",
        "description": "Name of the token"
      },
      "Type": {
        "type": "string",
        "enum": ["Token"],
        "description": "Type indicator for token entries"
      },
      "Attributes": {
        "type": "object",
        "description": "Key-value object containing attributes for the token",
        "additionalProperties": {
          "type": "string"
        }
      },
      "Description": {
        "type": "string",
        "description": "Text description of the token"
      },
      "Children": {
        "type": "object",
        "description": "Object mapping other WDSItems with IDs (statlines, rules,...) with additional description if needed",
        "additionalProperties": {
          "type": "string"
        }
      }
    }
  }
}
