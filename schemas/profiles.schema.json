{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Profiles Schema",
  "description": "Schema for profiles.json files containing profile definitions",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Id", "Name", "Type", "BaseId"],
    "properties": {
      "Id": {
        "type": "string",
        "description": "Unique identifier for the profile"
      },
      "Name": {
        "type": "string",
        "description": "Name of the profile"
      },
      "Type": {
        "type": "string",
        "enum": ["Profile"],
        "description": "Type indicator for profile entries"
      },
      "Description": {
        "type": "string",
        "description": "Text description of the profile"
      },
      "Attributes": {
        "type": "object",
        "description": "Key-value object containing attributes for the profile",
        "additionalProperties": {
          "type": "string"
        }
      },
      "BaseId": {
        "type": "string",
        "description": "ID of the base"
      },
      "Children": {
        "type": "object",
        "description": "Object mapping other WDSItems with IDs (statlines, rules,...) with additional description if needed",
        "additionalProperties": {
          "type": "string"
        }
      }
    },
    "additionalProperties": false
  }
}
