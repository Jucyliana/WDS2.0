{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Profiles Schema",
  "description": "Schema for profiles.json files containing profile definitions",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Id", "Name", "Type", "BaseId"],
    "properties": {
      "Id": {
        "type": "string",
        "description": "Unique identifier for the profile"
      },
      "Name": {
        "type": "string",
        "description": "Name of the profile"
      },
      "Type": {
        "type": "string",
        "enum": ["Profile"],
        "description": "Type indicator for profile entries"
      },
      "Description": {
        "type": "string",
        "description": "Text description of the profile"
      },
      "Attributes": {
        "type": "object",
        "description": "Key-value object containing attributes for the profile",
        "additionalProperties": {
          "type": "string"
        }
      },
      "BaseId": {
        "type": "string",
        "description": "ID of the base"
      },
      "Children": {
        "type": "array",
        "description": "Array of child items (statlines, rules, equipment, etc.)",
        "items": {
          "type": "object",
          "required": ["Id"],
          "properties": {
            "Id": {
              "type": "string",
              "description": "ID of the child item"
            },
            "Info": {
              "type": "string",
              "description": "Optional additional information about the item"
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }
}
