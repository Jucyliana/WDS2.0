{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Bases Schema",
  "description": "Schema for bases.json files containing miniature base definitions",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["Id", "Shape", "Width", "Length"],
    "properties": {
      "Id": {
        "type": "string",
        "description": "Unique identifier for the base"
      },
      "Name": {
        "type": "string",
        "description": "Name of the base"
      },
      "Shape": {
        "type": "integer",
        "enum": [0, 1], 
        "description": "Shape of the base square:0 or round:1"
      },
      "Width": {
        "type": "number",
        "description": "Width of the base in millimeters"
      },
      "Length": {
        "type": "number",
        "description": "Length of the base in millimeters"
      }
    },
    "additionalProperties": false
  }
}
